@page
@model ListModel
@{
}

<h1>Recipes</h1>

<table class="table">

    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" asp-for="SearchTerm" />
                <span class="input-group-btn">
                    <button class="btn btn-outline-secondary">
                        <i class="bi bi-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </form>

    @foreach (var recipe in @Model.Recipes)
    {
        <tr>
            <td>@recipe.Title</td>
            <td>@recipe.ShortDescription</td>
            <td>@recipe.Cuisine</td>
            <td><a class="btn btn-primary" asp-page="./Detail" asp-route-recipeId=@recipe.Id>Detail</a></td>
            <td><a class="btn btn-primary" asp-page="./Edit" asp-route-recipeId=@recipe.Id>Detail</a></td>
        </tr>
    }
</table>